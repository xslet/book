<?xml version="1.0" encoding="utf-8"?>
<?xml-stylesheet type="application/xml" href="res/xslbook.xsl"?>

<xslbook>
 <title>DIctionary</title>

 <body>
  <p>This is an upper text of a dictionary.</p>
  <dict>
   <item>
    <title>Item 1</title>
    <body>Description 1.</body>
   </item>
   <item>
    <title>Item 2</title>
    <body>Description 2.</body>
   </item>
   <item>
    <title>Item 3</title>
    <body>Description 3.</body>
   </item>
  </dict>
  <p>This is an lower text of a dictionary.</p>
 </body>

 <chapter>
  <title>Dictionary with @type</title>

  <clause>
   <title>@type and @mark is not specified</title>
   <body>
    <dict>
     <item><title>Title 1</title><body>Description 1</body></item>
     <item><title>Title 2</title><body>Description 2</body></item>
     <item><title>Title 3</title><body>Description 3</body></item>
    </dict>
   </body>
  </clause>

  <clause>
   <title>@type='none'</title>
   <body>
    <dict type="none">
     <item><title>Title 1</title><body>Description 1</body></item>
     <item><title>Title 2</title><body>Description 2</body></item>
     <item><title>Title 3</title><body>Description 3</body></item>
    </dict>
   </body>
  </clause>

  <clause>
   <title>@type='square'</title>
   <body>
    <dict type="square">
     <item><title>Title 1</title><body>Description 1</body></item>
     <item><title>Title 2</title><body>Description 2</body></item>
     <item><title>Title 3</title><body>Description 3</body></item>
    </dict>
   </body>
  </clause>

  <clause>
   <title>@type='decimal'</title>
   <body>
    <dict type="decimal">
     <item><title>Title 1</title><body>Description 1</body></item>
     <item><title>Title 2</title><body>Description 2</body></item>
     <item><title>Title 3</title><body>Description 3</body></item>
    </dict>
   </body>
  </clause>

  <clause>
   <title>@type='cjk-decimal'</title>
   <body>
    <dict type="cjk-decimal">
     <item><title>Title 1</title><body>Description 1</body></item>
     <item><title>Title 2</title><body>Description 2</body></item>
     <item><title>Title 3</title><body>Description 3</body></item>
    </dict>
   </body>
  </clause>

  <clause>
   <title>@type is any string ('▶︎ ')</title>
   <body>
    <dict type="'▶︎ '">
     <item><title>Title 1</title><body>Description 1</body></item>
     <item><title>Title 2</title><body>Description 2</body></item>
     <item><title>Title 3</title><body>Description 3</body></item>
    </dict>
   </body>
  </clause>

  <clause>
   <title>@type is any string ('\1F44D ')</title>
   <body>
    <dict type="'&#x1F44D; '">
     <item><title>Title 1</title><body>Description 1</body></item>
     <item><title>Title 2</title><body>Description 2</body></item>
     <item><title>Title 3</title><body>Description 3</body></item>
    </dict>
   </body>
  </clause>

  <clause>
   <title>Prevent style injection (@type='circle; color:red;' => invalid)</title>
   <body>
    <dict type="circle; color: red;">
     <item><title>Title 1</title><body>Description 1</body></item>
     <item><title>Title 2</title><body>Description 2</body></item>
     <item><title>Title 3</title><body>Description 3</body></item>
    </dict>
   </body>
  </clause>
 </chapter>

 <chapter>
  <title>Dictionary with @mark</title>

  <clause>
   <title>@mark='1.'</title>
   <body>
    <dict mark="1.">
     <item><title>Title 1</title><body>Description 1</body></item>
     <item><title>Title 2</title><body>Description 2</body></item>
     <item><title>Title 3</title><body>Description 3</body></item>
    </dict>
   </body>
  </clause>

  <clause>
   <title>@mark='(1)'</title>
   <body>
    <dict mark="(1)">
     <item><title>Title 1</title><body>Description 1</body></item>
     <item><title>Title 2</title><body>Description 2</body></item>
     <item><title>Title 3</title><body>Description 3</body></item>
    </dict>
   </body>
  </clause>

  <clause>
   <title>@mark='[A]'</title>
   <body>
    <dict mark="[A]">
     <item><title>Title 1</title><body>Description 1</body></item>
     <item><title>Title 2</title><body>Description 2</body></item>
     <item><title>Title 3</title><body>Description 3</body></item>
    </dict>
   </body>
  </clause>

  <clause>
   <title>@mark='a)'</title>
   <body>
    <dict mark="a)">
     <item><title>Title 1</title><body>Description 1</body></item>
     <item><title>Title 2</title><body>Description 2</body></item>
     <item><title>Title 3</title><body>Description 3</body></item>
    </dict>
   </body>
  </clause>
 </chapter>

 <chapter>
  <title>Dictionary with @separator</title>

  <clause>
   <title>@separator=':'</title>
   <body>
    <dict separator=":">
     <item><title>Title 1</title><body>Description 1</body></item>
     <item><title>Title 2</title><body>Description 2</body></item>
     <item><title>Title 3</title><body>Description 3</body></item>
    </dict>
   </body>
  </clause>

  <clause>
   <title>@separator='→'</title>
   <body>
    <dict type="circle"  separator="→">
     <item><title>Title 1</title><body>Description 1</body></item>
     <item><title>Title 2</title><body>Description 2</body></item>
     <item><title>Title 3</title><body>Description 3</body></item>
    </dict>
   </body>
  </clause>

  <clause>
   <title>@separator='\1F44D'</title>
   <body>
    <dict mark="(1)"  separator="&#x1F44D;">
     <item><title>Title 1</title><body>Description 1</body></item>
     <item><title>Title 2</title><body>Description 2</body></item>
     <item><title>Title 3</title><body>Description 3</body></item>
    </dict>
   </body>
  </clause>
 </chapter>

 <chapter>
  <title>Nested dictionary (@type &#38; separator))</title>
