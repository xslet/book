<?xml version="1.0" encoding="utf-8"?>
<?xml-stylesheet type="application/xml" href="res/xslbook.xsl"?>

<xslbook>
 <script rpath="assert.js"/>
 <script url="js/inlines.test.js"/>

 <title>Inlines</title>

 <chapter>
  <title>Line break</title>
  <body>
   <p>This sentence contains<br/>a line break.</p>
  </body>
 </chapter>

 <chapter>
  <title>Bold</title>
  <body>
   <p>This sentence contains a <b>BOLD</b> text.</p>
  </body>
 </chapter>

 <chapter>
  <title>Italic</title>
  <body>
   <p>This sentence contains a <i>italic</i> text.</p>
  </body>
 </chapter>

 <chapter>
  <title>Underline</title>
  <body>
   <p>This sentence contains a <u>underlined</u> text.</p>
  </body>
 </chapter>

 <chapter>
  <title>Superscript &amp; Subscript</title>
  <body>
   <p>This sentence contains a <sup>superscript</sup> and a <sub>subscript</sub> text.</p>
  </body>
 </chapter>

 <chapter>
  <title>Horizontal line</title>
  <body>
   <p>This sentence is upper of a horizontal line.<hr/>This sentence is lower of a horizontal line.</p>
  </body>
 </chapter>

 <chapter>
  <title>Code</title>
  <body>
   A <code>text</code> surrounded by &lt;code&gt; tags is styled into add border and background color.
  </body>
 </chapter>

 <chapter>
  <title>Bar</title>
  <body>
   A &lt;bar&gt; tag displays <bar/> text.
  </body>
 </chapter>

 <chapter>
  <title>Dots</title>
  <body>
   A &lt;dots&gt; tag displays <dots/> text.
  </body>
 </chapter>

</xslbook>
